<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="author" content="Brendan Ryan">
    <title>Braintree Demo</title>

  <!-- STYLESHEETS -->
  <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.3.0/base-min.css">
  <link rel="stylesheet" href="stylesheets/style.css">

</head>
  <body>
    <div class="container">
      <div class="content">
        <form action="" method="POST" id="cardForm">


        <div class="card-row">
        <div id="card-message">
          <span id="message-text"></span>
        </div>
        <div class="card">
      <div class="card-stripe"><h3>Payment Information</h3></div>
        <div class="form-row card-num">
            <label>
              <span>Card Number</span>
              <input type="tel" pattern="\d*"id="num" placeholder="XXXXXXXXXXXXXXX" maxlength="19" required/>
            </label>
          </div>

          <div class="form-row card-exp">
            <label>
              <span>Expiration</span>
              <input type="tel" pattern="\d{2}\/\d{4}" maxlength="8" id="expiry" placeholder="MM/YYYY" required/>
            </label>
          </div>

          <div class="form-row card-cvc">
            <label>
              <span>CVC</span>
                <input type="tel" pattern="\d*" maxlength="4" id="cvc" placeholder="XXX" required/>
            </label>
          </div>
          </div>
        </div>

        <div class="button-row">
          <button type="submit" class="btn btn-submit">Submit</button>
        </div>
  </form>
  </div>
  </div>
  <script src="javascripts/Vendor/jquery-1.9.1.js"></script>
  <script type="text/javascript" src="javascripts/app.js"></script>
</body>

</html>